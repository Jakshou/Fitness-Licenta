<!DOCTYPE html>
<html lang="ro">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>

    <!-- Bootstrap & FontAwesome -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/vapor/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <!-- Google Font -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />

    <!-- CSS Custom -->
    <link rel="stylesheet" href="/css/modern.css?">

  </head>

  <body>
    <!-- NAVBAR GLOBAL -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/dashboard">MacroLift</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbar"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbar">
          <ul class="navbar-nav ms-auto">
            <% const _isAuth = (typeof isAuth !== 'undefined' && isAuth); %> <%
            const _path = (typeof routePath !== 'undefined' ? routePath : '/');
            %>

            <li class="nav-item">
  <a href="/calculator" class="nav-link <%= routePath==='/calculator' ? 'active' : '' %>">Calculator</a>
</li>
            <li class="nav-item">
  <a href="/exercitii" class="nav-link <%= routePath==='/exercitii' ? 'active' : '' %>">Exerciții</a>
</li>

            <% if (_isAuth) { %>
            <li class="nav-item">
  <a href="/food-log" class="nav-link <%= routePath==='/food-log' ? 'active' : '' %>">Jurnal Nutriție</a>
</li>
            <li class="nav-item">
  <a href="/workout-log" class="nav-link <%= routePath==='/workout-log' ? 'active' : '' %>">Antrenamente</a>
</li>
            <li class="nav-item">
  <a href="/profile" class="nav-link <%= routePath==='/profile' ? 'active' : '' %>">Profil</a>
</li>
            <li class="nav-item">
              <a class="nav-link text-danger" href="/logout">Logout</a>
            </li>
            <% } else { %> <% if (_path !== '/login') { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <% } %> <% if (_path !== '/register') { %>
            <li class="nav-item">
              <a class="nav-link" href="/register">Înregistrare</a>
            </li>
            <% } %> <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- TOAST-URI -->
    <div
      class="position-fixed start-0 p-3"
      style="top: 64px; z-index: 1080; pointer-events: none"
    >
      <%- include("alerts") %>
    </div>

    <!-- CONTINUT -->
    <main class="container py-5"><%- body %></main>

    <!-- Bootstrap bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".toast").forEach(function (el) {
          var t = bootstrap.Toast.getOrCreateInstance(el);
          t.show();
        });
      });
    </script>
  </body>
</html>
