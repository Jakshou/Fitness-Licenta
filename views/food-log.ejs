<% title = "Jurnal Alimentar" %>

<div class="container py-5">
  <h2 class="mb-4 text-center">Jurnalul tău alimentar</h2>

  <% for (let masa in mese) { %>
  <div class="card mb-4 border-0 shadow-sm">
    <div
      class="card-header d-flex justify-content-between align-items-center bg-primary text-white"
    >
      <h5 class="mb-0 text-capitalize"><%= masa %></h5>
      <span
        ><strong>Calorii:</strong> <%= mese[masa].reduce((sum, item) => sum +
        item.calorii, 0) %> kcal</span
      >
    </div>

    <ul class="list-group list-group-flush">
      <% if (mese[masa].length === 0) { %>
      <li class="list-group-item text-muted fst-italic">
        Nicio mâncare adăugată
      </li>
      <% } else { %> <% mese[masa].forEach(item => { %>
      <li class="list-group-item">
        <div class="d-flex justify-content-between align-items-center">
          <div
            data-bs-toggle="collapse"
            data-bs-target="#info-<%= item.id %>"
            style="cursor: pointer"
          >
            <strong><%= item.nume %></strong>
            <small class="text-muted ms-2"><%= item.calorii %> kcal</small>
          </div>
          <form method="POST" action="/delete-food" class="m-0">
            <input type="hidden" name="id" value="<%= item.id %>" />
            <button type="submit" class="btn btn-sm btn-outline-danger">
              🗑️
            </button>
          </form>
        </div>

        <div class="collapse mt-2" id="info-<%= item.id %>">
          <small class="text-muted">
            P: <%= item.proteine %>g | C: <%= item.carbohidrati %>g | G: <%=
            item.grasimi %>g
          </small>
        </div>
      </li>
      <% }) %> <% } %>
    </ul>

    <!-- CAUTARE ALIMENT -->
    <div class="card-body border-top">
      <input
        type="text"
        class="form-control form-control-sm search-input"
        placeholder="Caută aliment..."
        data-masa="<%= masa %>"
      />
      <ul class="list-group mt-2 search-results" data-masa="<%= masa %>"></ul>
    </div>
  </div>
  <% } %>

  <!-- TOTAL ZILNIC -->
  <div class="alert alert-info text-center">
    <h5 class="mb-0">
      Calorii zilnice: <span class="fw-bold"><%= tdee %> kcal</span> | Consumat:
      <span class="fw-bold"><%= totalKcal %> kcal</span> | Rămase:
      <span class="fw-bold text-success"><%= caloriiRamase %> kcal</span>
    </h5>
  </div>

  <div class="text-center mt-4">
    <a href="/dashboard" class="btn btn-outline-secondary">Înapoi la Dashboard</a>
  </div>
</div>

<!-- JS LIVE SEARCH -->
<script>
  const appId = "95324eb6";
  const appKey = "f783dc23efd9c22d3196d43b589cc125";

  document.querySelectorAll(".search-input").forEach((input) => {
    input.addEventListener("input", async () => {
      const query = input.value.trim();
      const masa = input.dataset.masa;
      const list = document.querySelector(
        `.search-results[data-masa="${masa}"]`
      );
      list.innerHTML = "";

      if (query.length < 2) return;

      const url = `https://api.edamam.com/api/food-database/v2/parser?ingr=${encodeURIComponent(
        query
      )}&app_id=${appId}&app_key=${appKey}`;
      const res = await fetch(url);
      const data = await res.json();

      if (!data.hints.length) {
        list.innerHTML = `<li class="list-group-item text-danger">Niciun aliment găsit.</li>`;
        return;
      }

      data.hints.slice(0, 5).forEach((item) => {
        const f = item.food;

        const li = document.createElement("li");
        li.className =
          "list-group-item d-flex justify-content-between align-items-center";

        li.innerHTML = `
          <div>
            <strong>${f.label}</strong><br>
            kcal: ${Math.round(f.nutrients.ENERC_KCAL)} |
            P: ${Math.round(f.nutrients.PROCNT)}g |
            C: ${Math.round(f.nutrients.CHOCDF)}g |
            G: ${Math.round(f.nutrients.FAT)}g
          </div>
          <form method="POST" action="/food-log">
            <input type="hidden" name="nume" value="${f.label}">
            <input type="hidden" name="calorii" value="${Math.round(
              f.nutrients.ENERC_KCAL
            )}">
            <input type="hidden" name="proteine" value="${Math.round(
              f.nutrients.PROCNT
            )}">
            <input type="hidden" name="carbohidrati" value="${Math.round(
              f.nutrients.CHOCDF
            )}">
            <input type="hidden" name="grasimi" value="${Math.round(
              f.nutrients.FAT
            )}">
            <input type="hidden" name="masa" value="${masa}">
            <button type="submit" class="btn btn-sm btn-success">Adaugă</button>
          </form>
        `;

        list.appendChild(li);
      });
    });
  });
</script>
