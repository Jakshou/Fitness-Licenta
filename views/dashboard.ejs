<% title = "Dashboard" %>

<section class="container py-5">
  <div class="row g-4">

    <!-- Calculator -->
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/calculator" class="tile-link">
        <div class="card app-tile h-100">
          <div class="card-body text-center">
            <div class="app-tile-icon accent-primary">
              <i class="fa-solid fa-calculator"></i>
            </div>
            <h3 class="h5 mt-3 mb-1">Calculator Macronutrienți</h3>
            <p class="tile-sub">Calculează nevoile tale zilnice</p>
          </div>
        </div>
      </a>
    </div>

    <!-- Jurnal -->
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/food-log" class="tile-link">
        <div class="card app-tile h-100">
          <div class="card-body text-center">
            <div class="app-tile-icon accent-success">
              <i class="fa-solid fa-utensils"></i>
            </div>
            <h3 class="h5 mt-3 mb-1">Jurnal Alimentar</h3>
            <p class="tile-sub">Adaugă ce ai mâncat azi</p>
          </div>
        </div>
      </a>
    </div>

    <!-- Exerciții -->
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/exercitii" class="tile-link">
        <div class="card app-tile h-100">
          <div class="card-body text-center">
            <div class="app-tile-icon accent-danger">
              <i class="fa-solid fa-dumbbell"></i>
            </div>
            <h3 class="h5 mt-3 mb-1">Exerciții</h3>
            <p class="tile-sub">Vezi antrenamente cu video</p>
          </div>
        </div>
      </a>
    </div>

    <!-- Check-in -->
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/checkin" class="tile-link">
        <div class="card app-tile h-100">
          <div class="card-body text-center">
            <div class="app-tile-icon accent-warning">
              <i class="fa-solid fa-calendar-check"></i>
            </div>
            <h3 class="h5 mt-3 mb-1">Check-in Zilnic</h3>
            <p class="tile-sub">Ține evidența progresului tău</p>
          </div>
        </div>
      </a>
    </div>

    <!-- Profil -->
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/profile" class="tile-link">
        <div class="card app-tile h-100">
          <div class="card-body text-center">
            <div class="app-tile-icon accent-info">
              <i class="fa-solid fa-user"></i>
            </div>
            <h3 class="h5 mt-3 mb-1">Profilul Meu</h3>
            <p class="tile-sub">Vezi și editează datele personale</p>
          </div>
        </div>
      </a>
    </div>

    <!-- Comenzi (dacă vei folosi) -->
    <div class="col-12 col-sm-6 col-lg-4">
      <a href="/orders" class="tile-link">
        <div class="card app-tile h-100">
          <div class="card-body text-center">
            <div class="app-tile-icon accent-secondary">
              <i class="fa-solid fa-box"></i>
            </div>
            <h3 class="h5 mt-3 mb-1">Comenzile Mele</h3>
            <p class="tile-sub">Vezi istoricul de cumpărături</p>
          </div>
        </div>
      </a>
    </div>

  </div>
</section>
